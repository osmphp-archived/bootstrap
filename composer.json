{
    "name": "osmphp/bootstrap",
    "description": "A base theme for Osm projects built using Bootstrap CSS",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vladislav Osmianskij",
            "email": "vlaosm@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Osm\\Bootstrap\\": "src/",
            "Osm\\Bootstrap\\Tests\\": "tests/",
            "Osm\\Bootstrap\\Samples\\": "samples/"
        }
    },
    "require": {
        "php": ">=8.0",
        "osmphp/framework2": "^0.1"
    },
    "extra": {
        "osm": {
            "component_pools": {
                "src": {
                    "module_path": "*/Module.php",
                    "theme_path": "*/theme.php"
                },
                "samples": {
                    "module_path": "*/Module.php",
                    "testing": true
                }
            }
        }
    }
}